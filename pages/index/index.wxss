/**index.wxss**/
.divider-line{
  width: 100%;
  height: 10rpx;
  background: #e6e6e6;
}
.container{
  width: 100%;
  height: auto;
  padding: 0px;
}
.top-search{
  width: 100%;
  height: 80rpx;
  background: #ff6700;
  font-size: 30rpx;
}
.top-search-input{
  width: 95%;
  height: 50rpx;
  background: white;
  margin: 0 auto;
  margin-top: 15rpx;
  text-align: center;
  border-radius: 50rpx;
}
.swiper{
  width: 100%;
  height: 300rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.middle-tab{
  display: flex;
  width: 100%;
  height: 150rpx;
  border-bottom: .5rpx solid #dbdbdb;
}
.middle-tab-item{
  flex: 1;
  text-align: center;
}
.middle-tab-item image{
  width: 100%;
  height: 100%;
}
.promotion{
  width: 100%;
  height: 130rpx;
  display: flex;
}
.promotion-item{
  flex: 1;
  text-align: center;
}
.promotion-item image{
  width: 90%;
  height: 75rpx;
  margin-top: 27.5rpx;
}